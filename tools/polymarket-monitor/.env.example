# Polymarket Monitor Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Database Configuration (MySQL)
# =============================================================================
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=polymarket_monitor
DB_PORT=3306

# =============================================================================
# API Configuration (usually no changes needed)
# =============================================================================
GAMMA_API_BASE=https://gamma-api.polymarket.com
CLOB_API_BASE=https://clob.polymarket.com

# =============================================================================
# Rate Limiting
# =============================================================================
# Delay between CLOB API calls (seconds) - increase if getting rate limited
RATE_LIMIT_DELAY=0.5

# Request timeout (seconds)
REQUEST_TIMEOUT=30

# Maximum events to fetch per run
MAX_EVENTS_PER_FETCH=100

# =============================================================================
# Polling (for daemon mode)
# =============================================================================
POLLING_INTERVAL_MINUTES=30

# =============================================================================
# Discord Webhook (Part 2 - spike alerts)
# =============================================================================
DISCORD_WEBHOOK_URL=

# =============================================================================
# Spike Detection (Part 2)
# =============================================================================
# Minimum multiplier vs baseline to trigger alert (2.0 = 2x normal activity)
SPIKE_THRESHOLD_RATIO=2.0

# Hours of data for baseline calculation
BASELINE_HOURS=24

# Minimum orderbook depth to consider (filters low-liquidity markets)
MIN_ORDERBOOK_DEPTH=100.0

# =============================================================================
# Data Retention (automatic cleanup)
# =============================================================================
# Days to keep snapshot data (older data deleted automatically)
SNAPSHOT_RETENTION_DAYS=7

# Days to keep alert records
ALERT_RETENTION_DAYS=30

# Days of inactivity before removing a market
MARKET_RETENTION_DAYS=30

# =============================================================================
# AI Context Analysis (Claude API)
# =============================================================================
# Anthropic API key (shared with reply assistant)
CLAUDE_API_KEY=

# Claude model to use (haiku is fast/cheap, sonnet for better analysis)
# Options: claude-3-haiku-20240307, claude-3-5-sonnet-20241022
CLAUDE_MODEL=claude-3-haiku-20240307

# Brave Search API key (optional, free tier: 2000 queries/month)
# Get your key at: https://brave.com/search/api/
# If not set, falls back to DuckDuckGo (no API key needed)
BRAVE_API_KEY=

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO
# LOG_FILE=/path/to/polymarket-monitor.log
