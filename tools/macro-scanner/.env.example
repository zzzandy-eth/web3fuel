# =============================================================================
# Macro Scanner - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env

# --- Database ---
DB_HOST=localhost
DB_USER=macro_scanner
DB_PASSWORD=your_db_password_here
DB_NAME=macro_scanner
DB_PORT=3306

# --- Perplexity API ---
# Get your API key at https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=pplx-xxxxxxxxxxxxxxxxxxxx
PERPLEXITY_MODEL_SCAN=sonar-pro
PERPLEXITY_MODEL_DEEP=sonar-deep-research

# --- Claude API ---
# Get your API key at https://console.anthropic.com/
CLAUDE_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxx
CLAUDE_MODEL=claude-sonnet-4-5-20250929

# --- Discord ---
# Create a webhook in your Discord server settings
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_here

# --- Rate Limiting ---
RATE_LIMIT_DELAY=1.0
REQUEST_TIMEOUT=30
DEEP_RESEARCH_TIMEOUT=180

# --- Thresholds ---
# Minimum impact score (1-10) to include in filtered results
MIN_IMPACT_SCORE=7
# Minimum impact score to trigger deep research
DEEP_RESEARCH_THRESHOLD=8

# --- Deep-Dive Queue ---
# Hours before pending deep-dive items expire
DEEP_DIVE_EXPIRY_HOURS=48

# --- Data Retention ---
SCAN_RETENTION_DAYS=30
ALERT_RETENTION_DAYS=90

# --- Trade Outcome Resolution (Feedback Loop) ---
# Days before unresolved trade outcomes auto-expire
OUTCOME_RESOLUTION_DAYS=28
# Percent threshold for breakeven classification on expired outcomes
OUTCOME_BREAKEVEN_PCT=1.0

# --- Polymarket Database (cross-DB queries for prediction market bets) ---
# Uses same MySQL server; only set POLYMARKET_DB_HOST/PORT if different
POLYMARKET_DB_USER=polymarket
POLYMARKET_DB_PASSWORD=your_polymarket_db_password_here
POLYMARKET_DB_NAME=polymarket_monitor

# --- Logging ---
LOG_LEVEL=INFO
